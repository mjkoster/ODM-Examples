{
  "info": {
    "title": "Simple RTU GPIO Object", 
    "version": "2021-06-28", 
    "copyright": "Copyright 2021, Michael J. Koster. All rights reserved.", 
    "license": "https://github.com/one-data-model/oneDM/blob/master/LICENSE"
  }, 
  "namespace": {
    "fb": "https://onedm.org/exploratory/onefb/"
  }, 
  "defaultNamespace": "fb", 
  
  "sdfObject": {
    "gpio": {
      "sdfProperty": {
        "GpioPin": {
          "type": "string"
        },
        "GpioType": {
          "sdfRef": "/#/sdfData/GpioType"
        },
        "RangeMinimum": {
          "type": "integer",
          "minimum": 0,
          "maximum": 1023,
          "defaut": 0
        },
        "RangeMaximum": {
          "type": "integer",
          "minimum": 0,
          "maximum": 1023,
          "default": 1023
        },
        "CurrentRangeValue": {
          "type": "integer",
          "minimum": 0,
          "maximum": 1023
        },
        "ScaleMinimum": {
          "type": "number",
          "default": 0
        },
        "ScaleMaximum": {
          "type": "number",
          "default": 100
        },
        "CurrentValue": {
          "sdfChoice": {
            "IntegerValue": {
              "type": "integer"
            },
            "FloatValue": {
              "type": "float"
            },
            "BooleanValue": {
              "type": "boolean"
            }
          }
        },
        "ValueType": {
          "sdfRef": "/#/sdfData/ValueType"
        },
        "SampleIntervalCounts": {
          "type": "integer",
          "default": 1000
        },
        "CurrentCounts": {
          "description": "Sample: CurrentCounts > (LastSampleCounts + SampleIntervalCounts)",
          "type": "integer",
          "default": 0
        },
        "LastSampleCounts": {
          "type": "integer",
          "default": 0
        },
        "OutputLink": {
          "sdfRef": "/#/sdfData/ObjectLink",
          "minItems": 0
        }
      }
    }
  },
  "sdfData": {
    "GpioType": {
      "sdfChoice": {
        "AnalogInput": {},
        "AnalogOutput": {},
        "DigitalInput": {},
        "DigitalOutput": {},
        "PWM": {},
        "Serial": {}
      }
    },
    "ValueType": {
      "sdfChoice": {
        "BooleanValue": {
          "const": 0
        },
        "IntegerValue": {
          "const": 1
        },
        "FloatValue": {
          "const": 2
        },
        "StringValue": {
          "const": 3
        }
      }
    }
  }
}  