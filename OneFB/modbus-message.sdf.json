{
  "info": {
    "title": "SDF model for the Modbus message (transmission) layer", 
    "version": "2020-06-15", 
    "copyright": "Copyright 2020, Michael J. Koster\n        All rights reserved.", 
    "license": "https://github.com/one-data-model/oneDM/blob/master/LICENSE"
  }, 
  "namespace": {
    "fb": "https://onedm.org/exploratory/fieldbus/"
  }, 
  "defaultNamespace": "fb", 
  "sdfObject": {
    "modbusMessage": {
      "description": "The Modbus message layer",
      "label": "Modbus Message Layer",

      "sdfProperty": {
        "modbusRequestMessage": {
          "anyOf": [
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusRtuRequestMessage" },
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusAsciiRequestMessage" },
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusTcpRequestMessage" }
          ]
        },
        "modbusResponseMessage": {
          "anyOf": [
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusRtuResponseMessage" },
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusAsciiResponseMessage" },
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusTcpResponseMessage" }
          ]
        }      
      }, 

      "sdfAction": {
        "sendRequest": {
          "sdfInputData": [
            "#/sdfObject/modbusMessage/sdfAction/sendRequest/sdfData/requestMessage"
          ],
          "sdfData": {
            "requestMessage": {
              "sdfRef": "#/sdfObject/modbusMessage/sdfProperty/modbusRequestMessage"
            }
          }
         }, 
        "sendResponse": { 
          "sdfInputData": [
            "#/sdfObject/modbusMessage/sdfAction/sendRequest/sdfData/responseMessage"
          ],
          "sdfData": {
            "responseMessage": {
              "sdfRef": "#/sdfObject/modbusMessage/sdfProperty/modbusResponseMessage"
            }
          }
        }
      },

      "sdfEvent": {
        "receiveRequest": {
          "sdfData": {
            "sdfRef": "#/sdfObject/modbusMessage/sdfProperty/modbusRequestMessage"
          }
        },
        "receiveResponse": {
          "sdfData": {
            "sdfRef": "#/sdfObject/modbusMessage/sdfProperty/modbusReqsponseMessage"
          }
        },
        "modbusException": {
          "sdfData": {
             "sdfRef": "#/sdfObject/sdfData/modbusExceptionCode" 
          }
        }
      },

      "sdfData": {

        "modbusRequestMessageData": {
          "type": "array",
          "items": [
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusAddress" },
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusFunctionCode" },
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusRequestData" }
          ]
        },

        "modbusResponseMessageData": {
          "type": "array",
          "items": [
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusAddress" },
            { 
              "anyOf":[
                { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusFunctionCode" },
                { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusFunctionExceptionCode" }
              ]
            },
            {
              "anyOf": [
                { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusResponseData" },
                { "sdfRef": "#/sdfObject/sdfData/modbusExceptionCode" }
              ]
            }
          ]
        },

        "modbusRtuRequestMessage": {
          "type": "array",
          "items": [
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusRequestMessageData" },
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusCheckData16" }
          ]
        },
        "modbusAsciiRequestMessage": {
          "type": "array",
          "items": [
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusRequestMessageData" },
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusCheckData8" }
          ]
        },
        "modbusTcpRequestMessage": {
          "type": "array",
          "items": [
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusTransactionID" },
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusProtocolID" },
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/length" },
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusRequestMessageData" }
          ]
        },

        "modbusRtuResponseMessage": {
          "type": "array",
          "items": [
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusResponseMessageData" },
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusCheckData16" }
          ]
        },
        "modbusAsciiResponseMessage": {
          "type": "array",
          "items": [
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusResponseMessageData" },
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusCheckData8" }
          ]
        },
        "modbusTcpResponseMessage": {
          "type": "array",
          "items": [
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusTransactionID" },
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusProtocolID" },
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/length" },
            { "sdfRef": "#/sdfObject/modbusMessage/sdfData/modbusResponseMessageData" }
          ]
        },

        "modbusTransactionID": {
          "type": "number", 
          "minimum": 0,
          "maximum": 65535
        },
        "modbusProtocolID": {
          "type": "number", 
          "minimum": 0,
          "maximum": 65535
        },
        "length": {
          "type": "number", 
          "minimum": 0,
          "maximum": 65535
        },
        "modbusAddress": {
          "type": "number", 
          "minimum": 0,
          "maximum": 255
        },      
        "modbusCheckData8": {
          "description": "LRC for ASCII mode",
          "type": "number", 
          "minimum": 0,
          "maximum": 255
        },
        "modbusCheckData16": {
            "description": "CRC for RTU mode",
            "type": "number", 
            "minimum": 0,
            "maximum": 65535
        },

        "modbusFunctionCode": {
          "type": "number", 
          "minimum": 0,
          "maximum": 127,
          "sdfEnum": {
            "readCoilStatus": {
              "const": 1
            },
            "readInputStatus": {
              "const": 2
            },         
            "readHoldingRegisters": {
              "const": 3
            },
            "readInputRegisters": {
              "const": 4
            },
            "forceSingleCoil": {
              "const": 5
            },
            "presetSingleRegister": {
              "const": 6
            },
            "readExceptionStatus": {
              "const": 7
            },
            "forceMultipleCoils": {
              "const": 15
            },
            "presetMultipleRegisters": {
              "const": 16
            },
            "reportResponderID": {
              "const": 17
            }         
          }
        },

        "modbusFunctionExceptionCode": {
          "type": "number", 
          "minimum": 128,
          "maximum": 255,
          "sdfEnum": {
            "readCoilStatusException": {
              "const": 129
            },
            "readInputStatusException": {
              "const": 130
            },         
            "readHoldingRegistersException": {
              "const": 131
            },
            "readInputRegistersException": {
              "const": 132
            },
            "forceSingleCoilException": {
              "const": 133
            },
            "presetSingleRegisterException": {
              "const": 134
            },
            "readExceptionStatusException": {
              "const": 135
            },
            "forceMultipleCoilsException": {
              "const": 143
            },
            "presetMultipleRegistersException": {
              "const": 144
            },
            "reportResponderIDException": {
              "const": 145
            }         
          }
        },

        "modbusExceptionCode": {
          "enum": [ 1,2,3,4,5,6 ],
          "sdfEnum": {
            "illegalFunction": {
              "const": 1
            },
            "illegalDataAddress": {
              "const": 2
            },
            "illegalDataValue": {
              "const": 3
            },
            "responderFailure": {
              "const": 4
            },
            "acknowledge": {
              "const": 5
            },
            "responderBusy": {
              "const": 6
            }
          }
        },
        "modbusRequestData": {
          "anyOf": [
            {
              "description": "Function Code 01 - readCoilStatus",
              "type": "array",
              "items": [
                {
                  "description": "Starting Address",
                  "type": "number",
                  "minimum": 0,
                  "maximum": 65535
                },
                {
                  "description": "Number of points",
                  "type": "number",
                  "minimum": 0,
                  "maximum": 65535
                }
              ]
            },
            {
              "description": "validate as an opaque payload",
              "type": "string",
              "subType": "byteString",
              "minLength": 0
            }
          ]
        },
        "modbusResponseData": {
          "anyOf": [
            {
              "description": "Function Code 01 - readCoilStatus",
              "type": "array",
              "items": [
                {
                  "description": "Byte Count",
                  "type": "number",
                  "minimum": 0,
                  "maximum": 255
                },
                {
                  "description": "Coil Data",
                  "type": "string",
                  "subType": "byteString"
                }
              ]
            },
            {
              "description": "validate as an opaque payload",
              "type": "string",
              "subType": "byteString",
              "minLength": 0
            }
          ]
        }
      }
    }
  }
}