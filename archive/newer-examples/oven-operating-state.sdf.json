  }, 
  "namespace": {
    "st": "http://example.com/capability/smartthings"
  }, 
  "defaultnamespace": "st", 
  "odmObject": {
    "ovenOperatingState": {
      "name": "ovenOperatingState",
      "label": "Oven Operating State",
      "odmRequired": [
        "#/odmObject/ovenOperatingState/odmProperty/machineState",
        "#/odmObject/ovenOperatingState/odmProperty/supportedMachineStates",
        "#/odmObject/ovenOperatingState/odmAction/setMachineState"
      ],
      "odmProperty": {
        "machineState": {
          "type": "string", 
          "enum": [ "ready", "running", "paused" ]
        },
        "supportedMachineStates": {
          "type": "array",
          "items": {
            "enum": [ "ready", "running", "paused" ]
        },
        "ovenJobState": {
          "type": "string",
          "enum": [
            "cleaning",
            "cooking",
            "cooling",
            "draining",
            "preheat",
            "ready",
            "rinsing"
          ]
        },
        "completionTime": {
          "odmRef": "/odmData/iso8601date"
        },
        "operationTime": {
          "odmRef": "/odmData/PositiveInteger"
        },
        "progress": {
          "odmRef": "/odmData/IntegerPercent"
        }
      }, 
      "odmAction": {
        "setMachineState": { 
          "odmInputData": [
            "#/odmObject/ovenOperatingState/odmAction/setMachineState/odmData/ovenMode"
          ],
          "odmRequired": [
            "#/odmObject/ovenOperatingState/odmAction/setMachineState/odmData/ovenMode"
          ],          
          "odmData": {
            "ovenMode": {
              "odmRef": "/odmData/OvenMode"
            }
          }
        },
        "stop": {},
        "start": {
          "odmInputData": [
            "#/odmObject/ovenMode/odmAction/start/odmData/ovenMode"
          ],
          "odmData": {
            "odmRef": "/odmData/OvenMode"
          }
        }
      }
    }
  }
}